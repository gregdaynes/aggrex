<%- include('partials/document.ejs', { title }) %>

<div class="container fluid">
  <div class="row">
    <%- include('partials/sources.ejs', { sources }) %>

    <main class="col-md-9 col-lg-10 px-md-4 ml-sm-auto d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
      <h1 class="h2"><%= title %></h1>

      <div>
        <% articles.forEach(article => { %>
          <%- include('partials/article-preview.ejs', { article, source }) %>
        <% }) %>
      </div>
    </main>
  </div>
</div>
